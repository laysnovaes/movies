<p id="notice"><%= notice %></p>

<h1> Movies</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Rating</th>
      <th>Name</th>
      <th>Year</th>
      <th>Genre</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
          <td><%= rating_for movie, "stars" %></td>
          <td><%= link_to movie.name, movie %></td>
          <td><%= movie.year %></td>
          <td><button type="button" class="btn btn-default"><%= link_to movie.genre.name, movie.genre %></button></td>
          <td><%= movie.description %></td>
            </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path %>

    
          
